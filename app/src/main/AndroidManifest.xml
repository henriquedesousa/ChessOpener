<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ips.ests.chessopener"
    android:versionCode="1"
    android:versionName="0.1 alpha" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name=".Start"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividade que mostra o tabuleiro -->
        <activity
            android:name=".ChessBoardActivity"
            android:label="@string/activity_chessboard_name" >
        </activity>

        <!-- Actividade que mostra a lista de Aberturas -->
        <activity
            android:name=".biblioteca.BibliotecaActivity"
            android:label="@string/title_activity_biblioteca"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.ips.ests.chessopener.MainActivity" />
        </activity>
    </application>

</manifest>
