<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.ips.ests.chessopener.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="22sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_margin="28dp"
        android:background="@drawable/flat_selector"
        android:padding="8dp"
        android:text="Biblioteca de Aberturas" />

    <Button
        android:id="@+id/button_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_library"
        android:layout_centerHorizontal="true"
        android:layout_margin="28dp"
        android:background="@drawable/flat_selector"
        android:padding="8dp"
        android:text="Treino Individual" />

    <Button
        android:id="@+id/button_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_training"
        android:layout_centerHorizontal="true"
        android:layout_margin="28dp"
        android:background="@drawable/flat_selector"
        android:padding="8dp"
        android:text="Jogar 1v1 ou 1vPC" />

</RelativeLayout>